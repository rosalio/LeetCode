/*
 * @lc app=leetcode id=541 lang=java
 *
 * [541] Reverse String II
 */
class Solution {
    public String reverseStr(String s, int k) {
        if (s == null || s.isEmpty()) {
            return s;
        }

        final StringBuilder result = new StringBuilder();

        int left = 0;
        int right = 0;

        while (true) {
            right += k;
            if (right < s.length()) {
                result.append( reverseString(s.substring(left, right)) );
                left = right;
                right += k;
            } else {
                result.append( reverseString(s.substring(left)) );
                break;
            }

            if (right < s.length()) {
                result.append( s.substring(left, right ));
                left = right;
            } else {
                result.append( s.substring(left) );
                break;
            }
        }
        return result.toString();
    }

    private String reverseString(String s) {
        if (s == null || s.isEmpty()) {
            return s;
        }

        final StringBuilder result = new StringBuilder();
        for (int i = s.length() - 1; i >= 0; i--) {
            result.append(s.charAt(i));
        }

        return result.toString();
    }


}

